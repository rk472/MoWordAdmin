<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="studio.smartters.mowordadmin">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity android:name=".SplashActivity"
            android:theme="@style/LaunchScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ViewDataActivity"
            android:theme="@style/NoBar" />
        <activity android:name=".LoginActivity"
            android:theme="@style/NoBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AddImageActivity"
            android:label="Add Image"/>
        <activity android:name=".AddVideoActivity"
            android:label="Add Video"/>
        <activity
            android:name=".SearchNoActivity"
            android:theme="@style/NoBar" />
        <activity
            android:name=".SearchNameActivity"
            android:theme="@style/NoBar" />
        <activity
            android:name=".PersonDataActivity"
            android:theme="@style/NoBar" />
        <activity android:name=".NoVoterActivity"
            android:label="No Voter List"/>
        <activity android:name=".NoAdharActivity"
            android:label="No Adhar List"/>
        <activity
            android:name=".ViewMandalActivity"
            android:label="All Mandal Names"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".HelpViewActivity"
            android:label="All Help Request"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".HelpDetailsActivity"
            android:label="Help Details"/>
        <activity android:name=".SearchByBoothActivity"
            />
        <activity
            android:name=".LabharthiListActivity"
            android:label="Labharthi List"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AllWardActivity"
            android:label="All Ward / Panchayat" />
        <activity
            android:name=".AllBoothActivity"
            android:label="All Booth Names" />
        <activity android:name=".ChangePasswordActivity"
            android:theme="@style/NoBar"/>
        <activity android:name=".AddDocumentActivity"
            android:parentActivityName=".MainActivity"
            android:label="All Forms"/>
    </application>

</manifest>