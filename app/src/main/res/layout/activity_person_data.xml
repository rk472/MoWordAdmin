<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PersonDataActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardElevation="5sp"
                    app:cardUseCompatPadding="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="18">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:layout_marginBottom="8sp"
                                android:onClick="goBack"
                                android:layout_marginTop="8sp"
                                android:src="@drawable/back_vect" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent"
                            android:layout_weight="16">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="28sp"
                                android:layout_marginLeft="10sp"
                                android:fontFamily="@font/miriam_libre_new"
                                android:text="Person Details"/>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_height="match_parent">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:textColorHint="@color/colorAccentDark"
                    android:layout_marginTop="20sp"
                    android:backgroundTint="@color/colorAccent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/person_name"
                        android:hint="Person Name"
                        android:text="Sample Text"
                        android:editable="false"
                        android:focusable="false"
                        android:drawablePadding="5sp"
                        android:backgroundTint="@color/colorAccentDark"
                        android:inputType="text"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:textColorHint="@color/colorAccentDark"
                    android:layout_marginTop="20sp"
                    android:backgroundTint="@color/colorAccent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/person_head_name"
                        android:hint="Head Of the Family"
                        android:text="Sample Text"
                        android:editable="false"
                        android:focusable="false"
                        android:drawablePadding="5sp"
                        android:backgroundTint="@color/colorAccentDark"
                        android:inputType="text"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:textColorHint="@color/colorAccentDark"
                    android:layout_marginTop="20sp"
                    android:backgroundTint="@color/colorAccent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/person_address"
                        android:hint="Address"
                        android:text="Sample Text"
                        android:editable="false"
                        android:focusable="false"
                        android:drawablePadding="5sp"
                        android:backgroundTint="@color/colorAccentDark"
                        android:inputType="textMultiLine"
                        android:lines="2"
                        android:maxLines="2"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="3"
                    android:layout_marginTop="15sp"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColorHint="@color/colorAccentDark"
                        android:layout_marginTop="5sp"
                        android:backgroundTint="@color/colorAccent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_width="match_parent"
                            android:id="@+id/person_relation"
                            android:hint="Relaion With HOF"
                            android:text="Sample Text"
                            android:editable="false"
                            android:focusable="false"
                            android:drawablePadding="5sp"
                            android:backgroundTint="@color/colorAccentDark"
                            android:inputType="text"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColorHint="@color/colorAccentDark"
                        android:layout_marginTop="5sp"
                        android:backgroundTint="@color/colorAccent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_width="match_parent"
                            android:id="@+id/person_blood"
                            android:hint="Blood Group"
                            android:text="Sample Text"
                            android:editable="false"
                            android:focusable="false"
                            android:drawablePadding="5sp"
                            android:backgroundTint="@color/colorAccentDark"
                            android:inputType="text"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout><android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColorHint="@color/colorAccentDark"
                    android:layout_marginTop="5sp"
                    android:backgroundTint="@color/colorAccent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/person_gender"
                        android:hint="Gender"
                        android:text="Sample Text"
                        android:editable="false"
                        android:focusable="false"
                        android:drawablePadding="5sp"
                        android:backgroundTint="@color/colorAccentDark"
                        android:inputType="text"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:textColorHint="@color/colorAccentDark"
                    android:layout_marginTop="20sp"
                    android:backgroundTint="@color/colorAccent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/person_contact"
                        android:hint="Contact Number"
                        android:text="Sample Text"
                        android:editable="false"
                        android:ems="10"
                        android:focusable="false"
                        android:drawablePadding="5sp"
                        android:backgroundTint="@color/colorAccentDark"
                        android:inputType="text"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="3"
                    android:layout_marginTop="15sp"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColorHint="@color/colorAccentDark"
                        android:layout_marginTop="5sp"
                        android:backgroundTint="@color/colorAccent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_width="match_parent"
                            android:id="@+id/person_dob"
                            android:hint="Date Of Birth"
                            android:text="Sample Text"
                            android:editable="false"
                            android:focusable="false"
                            android:drawablePadding="5sp"
                            android:backgroundTint="@color/colorAccentDark"
                            android:inputType="text"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:visibility="invisible"
                        android:layout_weight="1"
                        android:id="@+id/tlDom"
                        android:textColorHint="@color/colorAccentDark"
                        android:layout_marginTop="5sp"
                        android:backgroundTint="@color/colorAccent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_width="match_parent"
                            android:id="@+id/person_dom"
                            android:hint="Date of Marriage"
                            android:text="Sample Text"
                            android:editable="false"
                            android:focusable="false"
                            android:drawablePadding="5sp"
                            android:backgroundTint="@color/colorAccentDark"
                            android:inputType="text"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout><android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColorHint="@color/colorAccentDark"
                    android:layout_marginTop="5sp"
                    android:backgroundTint="@color/colorAccent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/person_marital_status"
                        android:hint="Marital Status"
                        android:text="Sample Text"
                        android:editable="false"
                        android:focusable="false"
                        android:drawablePadding="5sp"
                        android:backgroundTint="@color/colorAccentDark"
                        android:inputType="text"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:layout_marginTop="15sp"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColorHint="@color/colorAccentDark"
                        android:layout_marginTop="5sp"
                        android:backgroundTint="@color/colorAccent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_width="match_parent"
                            android:id="@+id/person_adhar"
                            android:hint="Adhar Card Details"
                            android:text="Sample Text"
                            android:editable="false"
                            android:focusable="false"
                            android:drawablePadding="5sp"
                            android:backgroundTint="@color/colorAccentDark"
                            android:inputType="text"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColorHint="@color/colorAccentDark"
                        android:layout_marginTop="5sp"
                        android:backgroundTint="@color/colorAccent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_width="match_parent"
                            android:id="@+id/person_voter"
                            android:hint="Voter ID Details"
                            android:text="Sample Text"
                            android:editable="false"
                            android:focusable="false"
                            android:drawablePadding="5sp"
                            android:backgroundTint="@color/colorAccentDark"
                            android:inputType="text"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>